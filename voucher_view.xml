<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    <!-- Payment -->
        <record id="view_vendor_receipt_check_dialog" model="ir.ui.view">
            <field name="name">account.voucher.dialog.inherit</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_dialog_form"/>
            <field name="arch" type="xml">
		<field name="payment_option" position="after">
				<notebook colspan="4">
					<page string="Checks" attrs="{'invisible':[('check_type','=', False)]}">
        			        	    <field name="check_type" invisible="1"/>
	        	        		    <field name="validate_only_checks" invisible="1"/>
		        	        	    <field name="delivered_third_check_ids" 
							attrs="{'invisible':[('check_type','!=', 'third')]}" widget="many2many" 
							on_change="onchange_supplier_checks(delivered_third_check_ids, issued_check_ids, context)" 
							domain="[('type','=','third'),('state', '=', 'holding'),('third_handed_voucher_id', '=', False),('company_id', '=', company_id)]"/>
                			        	<field name="issued_check_ids" attrs="{'invisible':[('check_type','!=', 'issue')]}" 
								context="{'default_type':'issue','from_voucher':True,'default_journal_id':journal_id}"
								 on_change="onchange_supplier_checks(delivered_third_check_ids, issued_check_ids, context)"/>
					</page>
				</notebook>
		                <!-- field name="amount" position="after">
        		            <field name="amount_readonly" attrs="{'invisible':[('validate_only_checks','!=', True)]}"/>
		                </field>
                		<field name="amount" position="attributes">
		                    <attribute name="attrs">{'invisible':[('validate_only_checks','=', True)]}</attribute>
                		</field -->
		</field>
            </field>
        </record>



    </data>
</openerp>
